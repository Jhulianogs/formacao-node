<%- include('../../partials/header') %>
<body>
    <%- include('../../partials/homenavbar') %> 
    <div class="container">
        <% result.articles.rows.forEach(article => { %> 
            <div class="card">
                <div class="card-header">
                    <h2 class=""><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <hr>
            <div class="col-12">
                <% if (result.page > 2 ){ %> 
                    <a href="/articles/page/<%= result.page - 1 %>" class="float-left">Preview</a>
                <% } else if(result.page === 2) { %>
                    <a href="/" class="float-left">home</a>
                <% } %>
                <% if (result.next) { %> 
                    <a href="/articles/page/<%= result.page + 1 %>" class="float-right">Next</a>
                <% } %> 
            </div>
        </div> 
    </div>
</body>
<%- include('../../partials/footer') %>