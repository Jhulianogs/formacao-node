<%- include('./partials/header') %> 
<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <h1 class="card-title"><%= pergunta.titulo %></h1>
        <p class="card-text"><%= pergunta.descricao %></p>
        
        <hr>
        <form action="/responder" method="post">
            <h3>Responda</h3>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <label for="corpo">Resposta</label>
            <textarea name="corpo" id="corpo" class="form-control" placeholder="Digite sua resposta" cols="30" rows="10"></textarea>
            <br>
            <button class="btn btn-primary">Responder</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %> 
                </div>
            </div>
            
        <% }) %> 
    </div>
</body>
<%- include('./partials/footer') %>